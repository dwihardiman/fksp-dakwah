<%= render 'layouts/header' %>
<div id="dakwah_show">
  <div id="show_banner_dasbor">
    <h1><%= @member.title %> <span>-</span> Dasbor</h1>
  </div>

  <div id="links">
    <div class="wrapper">
       <ul>
         <li class="current">Episodes</li>
         <li><%= link_to "Buat dakwah", new_member_episode_path(@member) %></li>
         <li><%= link_to "Pengaturan Akun", edit_member_registration_path %></li>
         <li><%= link_to "Lihat Dakwah", member_path(current_member) %></li>
       </ul>
    </div>
  </div>

  <div id="episodes">
    <div class="wrapper">
      <ul class="cf">
        <% @episodes.each do |episode| %>
          <li class="cf">
            <div class="episode_thumbnail">
              <a href="
              #">
                <%= image_tag episode.episode_thumbnail.url(:medium) %>
              </a>
            </div>
            <div class="episode_overview">
              <h2><%= link_to episode.title, member_episode_path(@member, episode) %></h2>
              <p class="description"><%= truncate(episode.description, length: 160) %></p>
              <div class="authorized_links">
                <%= link_to "Edit", edit_member_episode_path(@member, episode) %>
                <%= link_to "Delete", member_episode_path(@member, episode), method: :delete, data: {confirm: "Apakah anda yakin?"} %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<%= will_paginate @episodes, previous_label: "Sebelumnya", next_label: "Selanjutnya" %>
