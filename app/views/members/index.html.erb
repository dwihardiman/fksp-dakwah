<div id="banner" class="dakwah_banner">
  <h1>Temukan kebaikan dalam setiap dakwah <br> yang telah mereka bagikan.</h1>
</div>

<div id="dakwah" class="cf">
  <div class="wrapper">
    <ul>
      <% @members.each do |member| %>
        <%= link_to member do %>
          <li>
            <%= image_tag member.avatar.url(:medium) %>
            <div class="dakwah_overview">
              <h2><%= member.title %></h2>
              <p class="episode_count"><%= member.episodes.count %> Episode</p>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
