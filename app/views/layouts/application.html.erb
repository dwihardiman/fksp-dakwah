<!DOCTYPE html>
<html>
  <head>
    <title>FkspDakwah</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://use.fontawesome.com/5a6d162b5f.js"></script>
  </head>

  <body>

    <% if alert %>
      <p class="alert">
        <%= alert %>
      </p>
    <% elsif notice%>
      <p class="notice">
        <%= notice %>
      </p>
    <% end %>

    <% unless current_page?(root_path) %>
      <%= render 'layouts/header' %>
    <% end %>

    <%= yield %>

  </body>
</html>
